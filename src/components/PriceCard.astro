---
const { name, price, period, description, features } = Astro.props;
---

<div class="bg-card text-card-foreground flex flex-col gap-6 rounded-xl border py-6 shadow-sm border border-border/60">
    <div class="gap-2 px-6 pb-3">
        <div class="text-base font-medium">
            {name}
        </div>
        <div className='flex items-baseline gap-0.5 mt-1'>
            <span class='text-2xl font-semibold text-foreground'>
                {price}
            </span>
            <span class='text-sm text-muted-foreground'>
                {period}
            </span>
        </div>
        <div class="text-muted-foreground text-sm mt-1">
            {description}
        </div>
    </div>
    <div class"flex-1 flex flex-col px-6">
        <ul class='space-y-2 flex-1'>
            {features.map((f) => (
                <li
                    key={f}
                    class='flex items-center gap-2 text-sm text-muted-foreground'
                >
                    <Check class='h-3.5 w-3.5 text-foreground shrink-0' />
                        {f}
                </li>
            ))}
        </ul>
        <div class='mt-5'>
            {price === "Custom" ? (
                <a href="/" class='w-full gap-1.5 hover:bg-secondary cursor-pointer'>
                    Kontakt Oss{' '}
                </a>
            ) : (
                <a href="/" class="w-full cursor-pointer">
                    Velg
                </a>
            )
        </div>
    </div>
</div>
