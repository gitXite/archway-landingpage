---
const { plan, description, price, subscription, link, binding } = Astro.props;
---

<div class="flex flex-col w-65 h-85 justify-between bg-card shadow-sm border border-border rounded-md text-center px-6 py-8 pointer-events-none">
    <p class="text-muted-foreground text-sm leading-relaxed text-pretty">{description}</p>
    <div class="flex flex-col gap-4">
        <div class="flex flex-col mt-5 items-center">
            <p class="text-foreground tracking-tight text-lg font-bold">{price}</p>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-foreground my-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            <p class="text-foreground tracking-tight text-md">{subscription}</p>
            <p class="text-muted-foreground text-sm mt-2">{binding}</p>
        </div>
        <a href={link} class="cursor-pointer pointer-events-auto inline-flex items-center justify-center rounded-md px-4 py-2 hover:bg-secondary border hover:border-border border-transparent transition-colors">
            <h2 class="font-bold bg-linear-to-r from-[#ff9a4d] via-[#ff5c5c] to-[#e91e63] bg-clip-text text-transparent tracking-tight text-lg">{plan}</h2>
        </a>
    </div>
</div>