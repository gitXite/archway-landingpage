---
const features: { icon: keyof typeof icons; title: string; description: string; }[] = [
  {
    icon: "fingerprint",
    title: "Din visuelle identitet, bevart",
    description: "AI-en lager ikke bare renderinger, den lager dine renderinger. Trent spesielt på dine prosjekter for å iverata firmaets visuelle identitet."
  },
  {
    icon: "zap",
    title: "Fra konsept til render på sekunder",
    description: "Det som tidligere tok timer eller dager, gjøres nå på sekunder. Fokuser på arkitektur, ikke Blender."
  },
  {
    icon: "refresh",
    title: "Skapt for simplisitet",
    description: "Et intuitivt verktøy, bygget for en sømløs arbeidsflyt. Ingen teknisk friksjon. Ingen læringskurve."
  },
  {
    icon: "lock",
    title: "Verket ditt forblir ditt",
    description: "Dine prosjekter blir aldri brukt til å trene modeller for andre. Ditt kreative DNA er beskyttet og privat for ditt firma."
  }
];

// Simple SVG icons
const icons = {
  fingerprint: "M7.864 4.243A7.5 7.5 0 0 1 19.5 10.5c0 2.92-.556 5.709-1.568 8.268M5.742 6.364A7.465 7.465 0 0 0 4.5 10.5a7.464 7.464 0 0 1-1.15 3.993m1.989 3.559A11.209 11.209 0 0 0 8.25 10.5a3.75 3.75 0 1 1 7.5 0c0 .527-.021 1.049-.064 1.565M12 10.5a14.94 14.94 0 0 1-3.6 9.75m6.633-4.596a18.666 18.666 0 0 1-2.485 5.33",
  zap: "M13 2L3 14h8l-1 8 10-12h-8l1-8z",
  refresh: "M1 4v6h6M23 20v-6h-6M20.49 9A9 9 0 005.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 013.51 15",
  lock: "M19 11H5c-1.1 0-2 .9-2 2v7c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-7c0-1.1-.9-2-2-2zM7 11V7c0-2.76 2.24-5 5-5s5 2.24 5 5v4"
};
---

<section id="tjenester" class="py-24 lg:py-32">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      <div class="lg:sticky lg:top-32">
        <p class="text-sm font-medium tracking-widest uppercase text-muted-foreground mb-4">Tjenester</p>
        <h2 class="text-3xl sm:text-4xl font-serif tracking-tight mb-6">
          Bygget for arkitekter
        </h2>
        <p class="text-lg text-muted-foreground leading-relaxed">
          Vi snakket med flere arkitekter før vi skrev en eneste linje kode. Hver funksjon finnes fordi dere ba om den.
        </p>
      </div>

      <div class="grid gap-8">
        {features.map((feature) => (
          <div class="group p-6 rounded-lg border border-border bg-card hover:bg-secondary/50 transition-colors">
            <div class="flex gap-5">
              <div class="shrink-0 w-10 h-10 rounded-md bg-secondary flex items-center justify-center group-hover:bg-foreground transition-colors">
                <svg class="w-5 h-5 text-foreground group-hover:text-background transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={icons[feature.icon]} />
                </svg>
              </div>
              <div>
                <h3 class="font-medium mb-2 pointer-events-none">{feature.title}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed pointer-events-none">{feature.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
