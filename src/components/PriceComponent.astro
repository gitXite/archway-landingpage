---

<section class="flex flex-col min-h-screen bg-background sm:justify-around items-center py-24 px-5">
    <div class="flex flex-col items-center mb-12 sm:mb-0">
        <p class="font-medium tracking-widest uppercase text-muted-foreground mb-4">Priser</p>
        <h1 class="text-3xl sm:text-4xl font-serif tracking-tight text-center">Se våre priser og betalingsplaner</h1>
    </div>
    <div class="flex flex-col sm:flex-row w-full space-y-15 sm:space-x-25 sm:space-y-0 justify-center items-center sm:relative sm:bottom-12">
        {cards.map((card) => (
            <PriceCard plan={card.plan} description={card.description} subscription={card.subscription} price={card.price} link={card.link} binding={card.binding} />
        ))}
    </div>
</section>