const cards = [
    {
        plan: "Fleksibel",
        description: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab asperiores quibusdam aperiam provident harum.',
        price: 'TBD',
        subscription: 'TBD',
        link: '/',
        binding: 'Ingen binding'
    },
    {
        plan: "Premium",
        description: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab asperiores quibusdam aperiam provident harum.',
